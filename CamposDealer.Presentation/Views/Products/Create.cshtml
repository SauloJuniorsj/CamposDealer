@model CamposDealer.Application.InputModels.CreateProductInputModel
@{
    ViewData["Title"] = "Cadastro de Produto";
}

<h2>@ViewData["Title"]</h2>


<form action=@Url.Action("Post", "Products") method="Post">
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label for="Description" class="col-form-label">Descrição: <span class="text-danger">*</span></label>
            @Html.TextBoxFor(model => model.Description, new { @maxlength = "100", @class = "form-control", @autocomplete = "off", @required = "required" })
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ProductValue" class="col-form-label">Valor do Produto: <span class="text-danger">*</span></label>
            @Html.TextBoxFor(model => model.ProductValue, new { @maxlength = "100", @class = "form-control", @autocomplete = "off", @required = "required" })
            <span asp-validation-for="ProductValue" class="text-danger"></span> 
        </div>

        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar a lista</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}