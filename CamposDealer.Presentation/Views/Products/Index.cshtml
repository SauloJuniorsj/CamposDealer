@model CamposDealer.Application.ViewModels.CollectionProductViewModel

@{
    ViewData["Title"] = "Produtos";
}

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Criar novo produto" class="fas fa-plus">Criar novo produto</span>
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CollectionProduct.FirstOrDefault().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CollectionProduct.FirstOrDefault().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CollectionProduct.FirstOrDefault().ProductValue)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CollectionProduct)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.ProductValue)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-warning">
                            <span class="fas fa-edit">Editar</span>
                        </a>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" title="Excluir" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este produto?');">
                                <span class="fas fa-trash">Excluir</span>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

